pattern:
* * * * *
 * * * *
  * * *
   * *
    *
code:
#include <stdio.h>

int main() {
    for(int i=5;i>=1;i=i-1)
    {
        for(int j=1;j<=(5-i);j++)
        {
            printf(" ");
        }
        for(int k=1;k<=i;k++)
        {   if(k==1||k==i||i==5)
            printf(" *");
            else 
            printf("  ");
        }
        printf("\n");
    }
    return 0;
}
