pattern:
     *
    * *
   *   *
  *     *
 *       *
  *     *
   *   *
    * *
     *
code:
#include <stdio.h>

int main()
{
    for (int i=1;i<=5;i++)
    {
        for (int j=1;j<=5-i;j++)
        {
            printf(" ");
        }
        for (int k=1;k<=i;k++)
        {
            if (k==1 || k==i)
            {
                printf("* ");
            }
            else
            {
                printf("  ");
            }
        }
        printf("\n");
    }
    for(int i=4;i>=1;i=i-1)
    {
        for(int j=1;j<=(4-i);j++)
        {
            printf(" ");
        }
        for(int k=1;k<=i;k++)
        {   if(k==1||k==i)
            printf(" *");
            else 
            printf("  ");
        }
        printf("\n");
    }
    
}
