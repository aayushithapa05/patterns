pattern:
    1
   1 1
  1 2 1
 1 3 3 1
1 4 4 4 1
code:
#include <stdio.h>

int main()
{
    int x=0;
    for (int i=1;i<=5;i++)
    {
        for (int j=1;j<=5-i;j++)
        {
            printf(" ");
        }
        for (int k=1;k<=i;k++)
        {
            if (k==1 || k==i)
            {
                printf("1 ");
            }
            else
            {
                printf("%d ",x);
            }
        }
        printf("\n");
        x=x+1;
    }
}
