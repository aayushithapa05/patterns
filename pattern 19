code:
#include <stdio.h>

int main()
{
    for (int i=1;i<=6;i++)
    {
        for (int j=1;j<=6-i;j++)
        {
            printf(" ");
        }
        for (int k=1;k<=i;k++)
        {
            printf("%d",k);
            
        }
        for (int j=1;j<=i;j++)
        {
            printf("%d",j);
        }
        printf("\n");
    }
    
    for(int i=5;i>=1;i=i-1)
    {   
        printf(" ");
        for(int k=1;k<=5-i;++k)
        {
          printf(" ");
        }
        
        for( int j=1;j<=i;j++)
        {
           printf("%d",j);
        }
        for (int j=1;j<=i;j++)
        {
            printf("%d",j);
        }
        printf("\n");
         
    }
}
