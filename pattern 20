code:
#include <stdio.h>

int main()
{
    for (int i=1;i<=6;i++)
    {
        for (int j=1;j<=6-i;j++)
        {
            printf(" ");
        }
        for (int k=1;k<=i;k++)
        {
            if (k%2==0)
            {
                printf("1");
            }
            else
            {
                printf("0");
            }
        }
        for (int j=1;j<=i;j++)
        {
            if (j%2==0)
            {
                printf("0");
            }
            else
            {
                printf("1");
            }
        }
        printf("\n");
    }

}
