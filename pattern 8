pattern:
    *
   * *
  * * *
 * * * *
  * * *
   * *
    *
code:
#include <stdio.h>

int main() 
{
    for (int i=1;i<=4;i++)
    {
        for (int j=1;j<=4-i;j++)
        {
            printf(" ");
        }
        for (int k=1;k<=i;k++)
        {
            printf("* ");
        }
        printf("\n");
    }
    printf(" ");
    for(int i=3;i>=1;i=i-1)
    {    
      for(int k=1;k<=3-i;++k)
        {
          printf(" ");
        }
      
     
      for( int j=1;j<=i;j++)
        {
           printf("* ");
        }
      printf("\n ");
         
    }
    return 0;
}
